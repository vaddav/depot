<%= semantic_form_for (@product), :html => { :multipart => true } do |f| %>
    <%= f.inputs  do%>
         <%= f.input :title %>
         <%= f.input :description %>
         <%= f.input :image, :as =>:file %>
         <%= f.input :retained_image, :as => :hidden %>
         <%= f.input :price ,:hint => "Can't be null"%>
    <% end %>
    <%= f.buttons %>
<% end %>