<!DOCTYPE html>
<html>
<head>
    <title>Pragprog Books Online Store</title>
    <%= stylesheet_link_tag "scaffold" %>
    <%= stylesheet_link_tag 'formtastic',  :cache => 'base' %>
    <%= stylesheet_link_tag "depot", :media => "all" %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
    </head>
<body id="store" >
  <div id="banner" >
      <%= image_tag("logo.png") %>
      <%= @page_title || "Pragmatic Bookshelf" %>
    </div>
    <div id="columns" >
        <div id="side" >
          <% if @cart %>
            <%= hidden_div_if(@cart.line_items.empty?, :id => "cart") do %>
                <%= render @cart %>
            <% end %>
          <% end %>

          <%= link_to 'Store', store_url %><br />
          <%= link_to 'Line_items', line_items_path %><br />
          <%= link_to 'Products', products_path %><br />
          <%= link_to 'Carts', carts_path %><br />
          <br />
          <span><%= Time.now().strftime("%d/%m/%y %H:%M") %></span>
        </div>
    <div id="main" >
    <%= yield %>
    </div>
  </div>
</body>
</html>
